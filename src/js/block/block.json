{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "nightly/toggle",
  "version": "1.0.0",
  "title": "Nightly",
  "category": "widgets",
  "icon": "admin-appearance",
  "description": "A dark mode toggle button for your website.",
  "keywords": ["dark", "mode", "toggle", "theme", "nightly"],
  "textdomain": "nightly",
  "attributes": {
    "toggleType": {
      "type": "string",
      "default": "theme"
    },
    "mode": {
      "type": "string",
      "default": "dark"
    },
    "showText": {
      "type": "boolean",
      "default": true
    }
  },
  "supports": {
    "html": false,
    "align": ["left", "center", "right"],
    "spacing": {
      "margin": true,
      "padding": true
    }
  }
}